<img class="bg" src="/images/bg.jpg" alt=""/>
<nav class="navbar navbar-fixed-top bg-brand" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">
        <img class="navbar-logo" src="/images/nav-logo-bold.png" alt="Guitar With Guru"/>
      </a>
    </div>

    <div class="nav navbar-nav navbar-right">
      {{#if user}}
        <a href="/u/home" class="navbar-text">Hi, {{user.name}}</a>
      {{else}}
        <a href="/door" class="navbar-text">Sign up</a>
      {{/if}}
    </div>
  </div>
</nav>
<div class="container" style="padding-top: 120px;">
  <div class="row mb-60">
    <div class="col-md-5 text-white">
      <div class="media mb-30">
        <div class="pull-left" style="margin-right: 30px;">
          <img class="media-object guru-image" src="{{picture}}" alt=""/>
        </div>
        <div class="media-body">
          <h2 class="guru-name">{{name}}</h2>
          <p class="guru-band">{{extras.band_name}}</p>
        </div>
      </div>

      <p class="guru-about-me">
        {{#if extras.about_me}}
          <i class="fa fa-quote-left" style="margin-right: 10px;"></i>
          {{extras.about_me}}
          <i class="fa fa-quote-right" style="margin-left: 10px;"></i>
        {{/if}}
      </p>
    </div>
    <div class="col-md-7">
      <div id="widget-courses">
        <!-- space for courses widget UI -->
      </div>
      <div id="widget-schedule">
        <!-- space for schedule widget UI -->
      </div>
    </div>
  </div>

  <div class="row" style="margin-bottom: 80px;">
    <div class="col-md-8 col-md-offset-2">
      <div id="widget-soundcloud">
        <!-- space for soundcloud widget UI -->
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div id="widget-youtube">
        <!-- space for youtube widget UI -->
      </div>
    </div>
  </div>
</div>

