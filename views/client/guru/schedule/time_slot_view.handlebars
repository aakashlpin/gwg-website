<div class="time-slot-container clearfix">
  <div class="item time-slot-unit">
    <div class="bfh-timepicker" data-type="startTime"></div>
  </div>
  <div class="item time-slot-join">
    <span class="schedule-text-middle">to</span>
  </div>
  <div class="item time-slot-unit">
    <div class="bfh-timepicker" data-type="endTime"></div>
  </div>
  <div class="item time-slot-remove">
    <button class="btn btn-link"><i class="glyphicon glyphicon-remove"></i></button>
  </div>
</div>